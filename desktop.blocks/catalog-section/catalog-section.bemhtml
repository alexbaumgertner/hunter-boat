block catalog-section {

    js: true

    elem header {
        tag: 'h4'
    }


    elem header-inner, tag: 'span'

    elem header-line, tag: 'span'

    elem title {
        tag: 'span',
        mix: [ { block: 'i-font', mods: { face: 'hermes' } } ]
    }

    elem counter, tag: 'span'


    elem list {
        tag: 'ul',
        mix: [ { block: 'i-sortable', js: true } ]
    }

    elem item {
        tag: 'li'
    }
}